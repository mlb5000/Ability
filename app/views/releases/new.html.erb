<h1>New release</h1>

<% semantic_form_for :release, @release, :url => product_releases_path do |f| %>
  <%= f.error_messages %>
   
  <% f.inputs do %>
    <%= f.input :version %>
    <%= f.input :startdate, :label => "Start Date" %>
    <%= f.input :enddate, :label => "Release Date" %>
    <%= f.input :goal %>
  <% end %>
  <%= f.buttons %>
<% end %>

<%= link_to 'Back', product_releases_path(@product) %>
