<h1>Editing quality_risk</h1>

<% form_for :quality_risk, @quality_risk, :url => product_quality_risk_url, :html => {:method =>:put} do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :risk_category_id %><br />
    <%= f.text_field :risk_category_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :mitigation_strategy_id %><br />
    <%= f.text_field :mitigation_strategy_id %>
  </p>
  <p>
    <%= f.label :explanation %><br />
    <%= f.text_field :explanation %>
  </p>
  <p>
    <%= f.label :likelihood %><br />
    <%= f.text_field :likelihood %>
  </p>
  <p>
    <%= f.label :impact %><br />
    <%= f.text_field :impact %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', product_quality_risk_path(@quality_risk.product, @quality_risk) %> |
