<h1>Listing products</h1>

<% addheaderhable(new_product_path, "Add New Product") %>
<table class='list'>
  <tr>
    <th>Name</th>
    <th>Identifier</th>
    <th>Req breakdown</th>
    <th>Jira defect filter</th>
  </tr>

  <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= h product.identifier %></td>
        <td><%= h product.req_breakdown.traceability %></td>
        <td><%= h product.jira_defect_filter %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to image_tag("/images/close.png", :border=>0), product, :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br/>