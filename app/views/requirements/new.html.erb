<h1>New requirement</h1>

<% semantic_form_for :requirement, @requirement, :url => product_requirements_path(@product) do |f| %>
  <% f.inputs do%>
    <%= f.input :product, :as => :hidden, :value => @product.id %>
    <%= f.input :requirement_level, :include_blank => false %>
    <%= f.input :requirement_type, :include_blank => false %>
    <%= f.input :description, :rows => 40 %>
    <%= f.input :rationale %>
    <%= f.input :fit_criterion %>
    <%= f.input :priority, :as => :select, :collection => [5,4,3,2,1], :include_blank => false, :hint => "5 = lowest, 1 = highest" %>
    <%= f.input :satisfaction, :as => :select, :collection => [1,2,3,4,5], :include_blank => false, :hint => "1 = don't really care, 5 = extremely satisfied'" %>
    <%= f.input :dissatisfaction, :as => :select, :collection => [1,2,3,4,5], :include_blank => false, :hint => "1 = don't really care, 5 = extremely dissatisfied" %>
  <% end %>
  <%= f.buttons %>
<% end %>

<%= link_to 'Back', product_requirements_path(@product) %>
