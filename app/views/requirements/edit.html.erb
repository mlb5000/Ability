<h1>Editing requirement</h1>

<% form_for :requirement, @requirement, :url => product_requirement_url(@requirement.product, @requirement), :html => {:method =>:put} do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :requirement_level_id %><br />
    <%= f.text_field :requirement_level_id %>
  </p>
  <p>
    <%= f.label :requirement_type_id %><br />
    <%= f.text_field :requirement_type_id %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :rationale %><br />
    <%= f.text_field :rationale %>
  </p>
  <p>
    <%= f.label :originator %><br />
    <%= f.text_field :originator %>
  </p>
  <p>
    <%= f.label :fit_criterion %><br />
    <%= f.text_field :fit_criterion %>
  </p>
  <p>
    <%= f.label :source_id %><br />
    <%= f.text_field :source_id %>
  </p>
  <p>
    <%= f.label :priority %><br />
    <%= f.text_field :priority %>
  </p>
  <p>
    <%= f.label :satisfaction %><br />
    <%= f.text_field :satisfaction %>
  </p>
  <p>
    <%= f.label :dissatisfaction %><br />
    <%= f.text_field :dissatisfaction %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', product_requirement_path(@requirement.product, @requirement) %> |
<%= link_to 'Back', product_requirements_path(@product) %>