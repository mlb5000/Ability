<h1>Editing requirement_review</h1>

<% form_for :requirement_review, @requirement_review, :url => product_requirement_review_path(:product_id,@requirement_review) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', product_requirement_review_path(:product_id, @requirement_review) %> |
<%= link_to 'Back', product_requirement_reviews_path(@product) %>