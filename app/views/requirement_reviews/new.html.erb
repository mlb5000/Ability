<h1>New Requirement Review</h1>

<% semantic_form_for :requirement_review, @requirement_review, :url => product_requirement_reviews_path(@product) do |f| %>
  <% f.inputs do %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :requirements, :as => :check_boxes %>
  <% end %>
  <%= f.buttons %>
<% end %>

<%= link_to 'Back', product_requirement_reviews_path(@product) %>
